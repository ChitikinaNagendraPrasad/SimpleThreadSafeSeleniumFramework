
<extentreports>
    <configuration>

        <theme>standard</theme>
        <encoding>UTF-8</encoding>
        <protocol>HTTP</protocol>
        <reportName>Automation Test Report</reportName>
        <documentTitle>Automation Execution Report</documentTitle>

        <!-- Replace Extent Logo with CA-CIB.png -->
        <js>
            $('.report-logo img').attr('src', 'CA-CIB.png');
        </js>

        <!-- Optional styling -->
        <css>
            .report-logo img {
                width: 160px !important;
                height: auto !important;
                padding: 5px;
            }
        </css>

    </configuration>
</extentreports>
